/* pages/goos_detail/index.wxss */
page {
  padding-bottom: 90rpx;
}
.detail_swiper swiper {
  height: 65vw;
  text-align: center;
}
.detail_swiper swiper image {
  width: 60%;
}
.goods_price {
  padding: 15rpx 0;
  font-size: 32rpx;
  font-weight: bold;
  color: var(--themeColor);
}
.goods_name_row {
  display: flex;
  border-top: 5rpx solid #dedede;
  border-bottom: 5rpx solid #dedede;
  padding: 10rpx 0;
}
.goods_name_row .goods_name {
  flex: 5;
  color: black;
  padding: 0 10rpx;
  font-size: 30rpx;
  display: -webkit-box;
  overflow: hidden;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
}
.goods_name_row .goods_collect {
  flex: 1;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  border-left: 1px solid #dedede;
}
.goods_name_row .goods_collect .iconfont .icon-shoucang1 {
  color: orangered;
}
.goods_info .goods_info_title {
  font-size: 32rpx;
  color: var(--themeColor);
  padding: 20rpx;
  font-weight: bold;
  border-bottom: 5rpx solid #dedede;
}
.btm_tool {
  width: 100%;
  height: 90rpx;
  display: flex;
  position: fixed;
  bottom: 0;
  left: 0;
  z-index: 999;
  background-color: #fcfffc;
  border-top: 1px solid #d7dadf;
}
.btm_tool .tool_item {
  flex: 1;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  font-size: 24rpx;
  position: relative;
}
.btm_tool .tool_item button {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  opacity: 0;
}
.btm_tool .btn_cart {
  flex: 2;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  color: white;
  background-color: #ffa300;
  font-weight: bold;
  font-size: 30rpx;
}
.btm_tool .btn_buy {
  flex: 2;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  color: white;
  background-color: #fe524a;
  font-weight: bold;
  font-size: 30rpx;
}
