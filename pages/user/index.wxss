/* pages/user/index.wxss */
page {
  background-color: #e9ebe8;
}
.user_info_wrap {
  position: relative;
  height: 45vh;
  overflow: hidden;
  background-color: var(--themeColor);
}
.user_info_wrap .user_img_wrap {
  position: relative;
}
.user_info_wrap .user_img_wrap .user_bg {
  height: 50vh;
  filter: blur(10rpx);
}
.user_info_wrap .user_img_wrap .user_info {
  position: absolute;
  left: 50%;
  transform: translateX(-50%);
  top: 20%;
  text-align: center;
}
.user_info_wrap .user_img_wrap .user_info .user_icon {
  width: 150rpx;
  height: 150rpx;
  border-radius: 50%;
}
.user_info_wrap .user_img_wrap .user_info .user_name {
  color: white;
  margin-top: 40rpx;
  font-size: 40rpx;
}
.user_info_wrap .user_btn {
  height: 60rpx;
  width: 120rpx;
  background-color: green;
  color: white;
  text-align: center;
  line-height: 60rpx;
  position: absolute;
  transform: translateX(-50%);
  top: 50%;
  left: 50%;
}
.user_conten {
  position: relative;
}
.user_conten .user_main {
  padding-bottom: 100rpx;
  color: #666;
  position: absolute;
  width: 90%;
  left: 50%;
  transform: translateX(-50%);
  top: -40rpx;
}
.user_conten .user_main .history_wrap {
  background-color: #fff;
  display: flex;
}
.user_conten .user_main .history_wrap navigator {
  flex: 1;
  padding: 10rpx 0;
  text-align: center;
}
.user_conten .user_main .history_wrap navigator .his_num {
  color: var(--themeColor);
}
.user_conten .orders_wrap {
  background-color: #fff;
  margin-top: 30rpx;
}
.user_conten .orders_wrap .orders_title {
  padding: 20rpx;
  border-bottom: 1px solid #ccc;
}
.user_conten .orders_wrap .order_content {
  display: flex;
}
.user_conten .orders_wrap .order_content navigator {
  padding: 15rpx;
  flex: 1;
  text-align: center;
}
.user_conten .orders_wrap .order_content navigator .iconfont {
  color: var(--themeColor);
}
.user_conten .orders_wrap .order_content navigator .order_name {
  font-size: 32rpx;
}
.user_conten .address_wrap {
  margin-top: 30rpx;
  background-color: #fff;
  padding: 20rpx;
}
.user_conten .app_info_wrap {
  margin-top: 30rpx;
  background-color: #fff;
}
.user_conten .app_info_wrap .app_info_item {
  padding: 20rpx;
  border-bottom: 1px solid #ccc;
}
.user_conten .app_info_wrap .contact {
  display: flex;
  justify-content: space-between;
}
.user_conten .recommend_wrap {
  margin-top: 30rpx;
  background-color: #fff;
  padding: 20rpx;
}
